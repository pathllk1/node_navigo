# Database Configuration (Turso)
TURSO_DATABASE_URL=libsql://your-db-name.aws-region.turso.io
TURSO_AUTH_TOKEN=your_turso_auth_token_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_min_32_characters_long
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_min_32_characters_long

# Node Environment
NODE_ENV=development

# Server Port (local development only)
PORT=3001

# Optional: API Keys
RAPIDAPI_KEY=your_rapidapi_key_if_needed
